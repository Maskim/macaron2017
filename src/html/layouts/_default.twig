<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">

    <meta property="og:url"           content="http://www.votezmacaron.fr" />
    <meta property="og:type"          content="website" />
    <meta property="og:title"         content="Macaron2017" />
    <meta property="og:description"   content="#Macaron2017 le candidat de la transparence" />
    <meta property="og:image"         content="http://www.votezmacaron.fr/img/big-glass.jpg" />

    <title>{{ title }}</title>

    <link href="{% root %}/css/styles.css" rel="stylesheet">
</head>
<body>
    <!-- include inline svg symbols -->
    <div style="display: none">
        {{ filecontent('../assets/svg/symbols.svg') }}
    </div>

    {% include '../partials/top-bar.html.twig' %}

    <section>
        {% block main %}{% endblock %}
    </section>

    {% include '../partials/footer.html.twig' %}

    <script src="{% root %}/js/script.js" async></script>

    <div id="fb-root"></div>
    <script>
        window.fbAsyncInit = function() {
            FB.init({
                appId      : '266117643840471',
                xfbml      : true,
                version    : 'v2.8'
            });
            FB.AppEvents.logPageView();
        };

        (function(d, s, id){
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {return;}
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
</body>
</html>
